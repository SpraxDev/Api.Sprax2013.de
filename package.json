  },
  "bugs": {
    "url": "https://github.com/SpraxDev/Api.Sprax2013.de/issues"
  },
  "main": "dist/main.js",
  "type": "module",
  "scripts": {
    "build": "tsc",

    "test": "NODE_OPTIONS=\"$NODE_OPTIONS --experimental-vm-modules\" jest --coverage",
    "test:ci": "npm run test -- --ci --randomize",
    "dev": "node --watch --env-file .env --loader ts-node/esm --import ./src/sentry-init.ts --enable-source-maps src/main.ts",

    "prisma:generate": "prisma generate",
    "prisma:migrate:dev": "prisma migrate dev",
    "prisma:migrate:deploy": "prisma migrate deploy"
  },
  "engines": {
    "node": ">=22.0.0",
    "npm": ">=10.0.0"
  },
  "dependencies": {
    "@prisma/client": "^5.18.0",
    "@sentry/node": "^8.26.0",
    "@sentry/profiling-node": "^8.26.0",
    "fastify": "^4.28.1",
    "gl": "^8.0.2",
    "ipaddr.js": "^2.2.0",
    "reflect-metadata": "^0.2.2",
    "sharp": "^0.33.5",
    "tsyringe": "^4.8.0",
    "undici": "^6.19.8"
  },
  "devDependencies": {
    "@tsconfig/node22": "^22.0.0",
    "@types/gl": "^6.0.5",
    "@types/jest": "^29.5.12",
    "@types/node": "^22.5.0",
    "@types/webgl-ext": "^0.0.37",
    "jest": "^29.7.0",
