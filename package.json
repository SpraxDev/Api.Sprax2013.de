{
  "name": "sprax-api",
  "version": "2.0.0-SNAPSHOT",
  "private": true,
  "description": "Public REST API, mainly for Minecraft related stuff (at least for now)",
  "homepage": "https://github.com/SpraxDev/Api.Sprax2013.de#readme",
  "license": "GPL-3.0-or-later",
  "keywords": [
    "rest-api",
    "minecraft",
    "mojang"
  ],
  "author": {
